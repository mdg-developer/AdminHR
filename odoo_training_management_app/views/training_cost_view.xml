<odoo>
    <data>
        <record id="view_training_cost_form" model="ir.ui.view">
                <field name="name">training.cost.form</field>
                <field name="model">training.cost</field>
                <field name="arch" type="xml">
                    <form>
                        <sheet>

                        <group>
                            <group>
                                <field name='name'/>
                            </group>
                        </group>

                        </sheet>
                    </form>
                </field>
        </record>

        <record id="view_training_cost_tree" model="ir.ui.view">
                <field name="name">training.cost.tree</field>
                <field name="model">training.cost</field>
                <field name="arch" type="xml">
                    <tree>

                        <field name='name'/>
                    </tree>
                </field>
        </record>

        <record id="view_training_cost_search" model="ir.ui.view">
                <field name="name">training.cost.search</field>
                <field name="model">training.cost</field>
                <field name="arch" type="xml">
                    <search>

                        <field name='name'/>
                    </search>
                </field>
        </record>

        <record model="ir.actions.act_window" id="action_training_cost">
            <field name="name">Training Cost</field>
            <field name="res_model">training.cost</field>

            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>