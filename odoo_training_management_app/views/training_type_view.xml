<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <data>
        <record id="view_training_type_form" model="ir.ui.view">
                <field name="name">training.type.form</field>
                <field name="model">emp.training.type</field>
                <field name="arch" type="xml">
                    <form>
                        <sheet>
                            <h1>
                              <field name="name" class="o_class_room_name" placeholder="Training Type..."/>
                            </h1>
                            <group>

                            </group>
                        </sheet>
                    </form>
                </field>
        </record>

        <record id="view_training_type_tree" model="ir.ui.view">
                <field name="name">training.type.tree</field>
                <field name="model">emp.training.type</field>
                <field name="arch" type="xml">
                    <tree>

                        <field name='name'/>

                    </tree>
                </field>
        </record>

        <record id="view_training_type_search" model="ir.ui.view">
                <field name="name">training.type.search</field>
                <field name="model">emp.training.type</field>
                <field name="arch" type="xml">
                    <search>

                        <field name='name'/>

                    </search>
                </field>
        </record>

        <record model="ir.actions.act_window" id="action_training_type">
            <field name="name">Training Type</field>
            <field name="res_model">emp.training.type</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>